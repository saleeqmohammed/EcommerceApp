
<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
                <div class="col-lg-3 p-3 col-md-6">
                    <div class="card " style="width: 15rem; height: 26rem">
                        <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <h6 class="card-title">{{this.price}}</h2>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="flex-column btn btn-primary">Add to cart</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>

